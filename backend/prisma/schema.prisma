generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  createdAt DateTime @default(now())
  transactions Transaction[]
  budget Budget[]
  category Category[]
}
model Transaction{
  id Int @id @default(autoincrement())
  amount Float
  category String
  note String
  type String
  date DateTime @default(now())
  userId Int
  user User @relation(fields: [userId], references: [id])
}
model Category{
  id Int @id @default(autoincrement())
  name String
  type String
  color String
  userId Int
  user User @relation(fields: [userId], references: [id])
}
model Budget{
  id Int @id @default(autoincrement())
  balance Float
  limit Float
  month Int
  year Int
  userId Int
  user User @relation(fields: [userId], references: [id])
}
